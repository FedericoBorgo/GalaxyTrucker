<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>


<VBox fx:controller="it.polimi.softeng.is25am10.gui.TileDrawController"
      spacing="10" alignment="center"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-padding: 10;">

    <Button fx:id="drawTileButton" text="Pesca tessera" onAction="#loadRandomImage"/>

    <ImageView fx:id="tileImageView" fitWidth="150" fitHeight="150"
               preserveRatio="true" onMouseClicked="#rotateImage"/>

</VBox>